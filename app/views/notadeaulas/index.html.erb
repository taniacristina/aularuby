<p id="notice"><%= notice %></p>

<h1>Listing Notadeaulas</h1>

<table>
  <thead>
    <tr>
      <th>Autor</th>
      <th>Disciplina</th>
      <th>Ano</th>
      <th>Semestre</th>
      <th>Data</th>
      <th>Titulo</th>
      <th>Texto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notadeaulas.each do |notadeaula| %>
      <tr>
        <td><%= notadeaula.autor %></td>
        <td><%= notadeaula.disciplina %></td>
        <td><%= notadeaula.ano %></td>
        <td><%= notadeaula.semestre %></td>
        <td><%= notadeaula.data %></td>
        <td><%= notadeaula.titulo %></td>
        <td><%= notadeaula.texto %></td>
        <td><%= link_to 'Show', notadeaula %></td>
        <td><%= link_to 'Edit', edit_notadeaula_path(notadeaula) %></td>
        <td><%= link_to 'Destroy', notadeaula, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

